{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "version": "0.2",
  "language": "en, en-US, en-Gb, pt, pt-BR, lorem",
  "ignorePaths": ["packages", "config/fish/fish_*", "config/bat/themes"],
  "dictionaryDefinitions": [
    {
      "name": "dotfiles-dict",
      "path": "./cspell.dict.txt",
      "addWords": true
    }
  ],
  "dictionaries": ["dotfiles-dict"],
  "useGitignore": true,
  "import": ["@cspell/dict-pt-br/cspell-ext.json"]
}
