{
  "files.associations": {
    ".stowrc": "properties",
    "fish_plugins": "shellscript",
    "config": "properties",
    "*.tmTheme": "xml",
    "*.theme": "php"
  },
  "explorer.compactFolders": true,
  "explorer.excludeGitIgnore": true,
  "explorer.fileNesting.patterns": {
    ".stylua.toml": "biome.json, .cspell.json",
    "readme.md": ".gitignore, .stowrc, LICENSE, bootstrap.sh, .stylua.toml",
    "dot-env": "readme.md",
    "dot-ignore": "readme.md"
  },
  "files.exclude": {
    "**/.git": false,
    "**/.svn": false,
    "**/.hg": false,
    "**/.DS_Store": false,
    "**/Thumbs.db": false
  }
}
