alias undot="stow --delete"
alias redot="stow --restow"
alias pnpx="pnpm dlx"
alias full-info="fastfetch --config ~/.config/fastfetch/all.jsonc"

abbr q="exit"
abbr A="cd ~/Annotations"
abbr D="cd ~/Dotfiles"
abbr P="cd ~/Projects"
abbr .="cd ."
abbr ~="cd ~"
abbr ..="cd .."
abbr -- -="cd -"
abbr s="source"
abbr c="code"
abbr c.="code ."
abbr c!="code -r . && exit"
abbr nv="nvim"
abbr nv.="nvim ."
abbr t="tmux"
abbr ta="tmux attach"
abbr d="docker"
abbr dc="docker compose"
abbr dp="docker pull"
