abbr dsp="docker stop"
abbr m="mise"

command -v codium > /dev/null && alias code="codium"

command -v exa > /dev/null && \
  alias ls="exa --git --icons --long --no-permissions --no-user --no-time --no-filesize --group-directories-first" && \
  alias la="exa --git --icons --long --all --group-directories-first" && \
  alias ll="exa --git --icons --long --group-directories-first"

