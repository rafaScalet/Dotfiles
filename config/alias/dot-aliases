  alias ls="eza --git --icons --long --no-permissions --no-user --no-time --no-filesize --group-directories-first" && \
  alias la="eza --git --icons --long --all --group-directories-first" && \
  alias ll="eza --git --icons --long --group-directories-first"

command -v batman > /dev/null && alias man="batman"
