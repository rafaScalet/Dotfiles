{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "version": "0.2",
  "language": "en, pt, pt_BR, lorem",
  "dictionaries": [
    "bash",
    "docker",
    "dotnet",
    "games",
    "git",
    "java",
    "lua",
    "node",
    "npm",
    "personal",
    "programs",
    "python",
    "rust",
    "shellscript",
    "sql",
    "typescript",
    "vim"
  ],
  "import": [
    "https://cdn.jsdelivr.net/npm/@cspell/dict-pt-br/cspell-ext.json",
    "https://cdn.jsdelivr.net/npm/@cspell/dict-vim/cspell-ext.json"
  ],
  "dictionaryDefinitions": [
    {
      "name": "personal",
      "addWords": true,
      "path": "./dictionaries/personal.txt"
    },
    {
      "name": "games",
      "addWords": true,
      "path": "./dictionaries/games.txt"
    },
    {
      "name": "programs",
      "addWords": true,
      "path": "./dictionaries/programs.txt"
    }
  ]
}
