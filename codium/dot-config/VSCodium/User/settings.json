{
  // #region" Misc
  "redhat.telemetry.enabled": false,
  "git.openRepositoryInParentFolders": "never",
  "debug.toolBarLocation": "docked",
  // #endregion
  // #region File Size
  "fileSizeAndStats.statusBarText": "${ORIGINAL_SIZE}",
  "fileSizeAndStats.statusItemPosition": "Right",
  "fileSizeAndStats.sizeMode": "Binary Mode",
  // #endregion
  // #region Project Manager
  "projectManager.git.baseFolders": [
    "~/Dotfiles",
    "~/Projects",
    "~/Annotations",
  ],
  "projectManager.showProjectNameInStatusBar": false,
  // #endregion
  // #region ZenMode
  "zenMode.fullScreen": false,
  "zenMode.showTabs": "single",
  // #endregion
  // #region Extensions
  "extensions.ignoreRecommendations": true,
  "extensions.closeExtensionDetailsOnViewChange": true,
  "extensions.autoUpdate": false,
  // #endregion
  // #region Workbench
  "workbench.editor.labelFormat": "long",
  "workbench.panel.showLabels": false,
  "workbench.colorCustomizations": {},
  "workbench.statusBar.visible": true,
  "workbench.preferredDarkColorTheme": "Catppuccin Mocha",
  "workbench.preferredLightColorTheme": "Catppuccin Latte",
  "workbench.iconTheme": "let-icons",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.layoutControl.enabled": false,
  "workbench.startupEditor": "none",
  "workbench.editor.showTabs": "single",
  "workbench.activityBar.location": "hidden",
  "workbench.editorAssociations": {
    "*.svg": "default"
  },
  // #endregion
  // #region Window
  "window.zoomLevel": 0,
  "window.commandCenter": false,
  "window.menuBarVisibility": "toggle",
  "window.autoDetectColorScheme": true,
  "window.experimentalControlOverlay": true,
  "window.titleBarStyle": "native",
  "window.title": "${folderName}",
  "window.customTitleBarVisibility": "auto",
  "window.openFoldersInNewWindow": "default",
  "window.newWindowProfile": "Default",
  // #endregion
  // #region Editor
  "editor.wordWrap": "on",
  "editor.fontSize": 14,
  "editor.lineHeight": 1.4,
  "editor.fontFamily": "JetBrainsMono NFP",
  "editor.fontWeight": "900",
  "editor.fontLigatures": true,
  "editor.codeLens": false,
  "editor.renderLineHighlight": "gutter",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "phase",
  "editor.cursorStyle": "block",
  "editor.bracketPairColorization.enabled": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": false,
  "editor.stickyScroll.enabled": false,
  "editor.tabCompletion": "on",
  "editor.guides.bracketPairs": false,
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.horizontal": "hidden",
  "editor.minimap.renderCharacters": false,
  "editor.minimap.enabled": false,
  "editor.lineNumbers": "relative",
  "editor.tabSize": 2,
  "editor.indentSize": "tabSize",
  // #endregion
  // #region Terminal
  "terminal.integrated.defaultProfile.linux": "sh",
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.fontFamily": "JetBrainsMono NFP",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontWeight": "bold",
  "terminal.integrated.fontLigatures.enabled": true,
  // #endregion
  // #region Explorer
  "explorer.compactFolders": false,
  "explorer.incrementalNaming": "smart",
  "explorer.decorations.badges": true,
  "explorer.decorations.colors": true,
  "explorer.sortOrder": "foldersNestsFiles",
  "explorer.fileNesting.enabled": false,
  "explorer.fileNesting.expand": false,
  "explorer.expandSingleFolderWorkspaces": false,
  "explorer.fileNesting.patterns": {
    "*.ts": "", "*.js": "", "*.jsx": "", "*.tsx": "",
    "tsconfig.json": "tsconfig.*.json, *.tsbuildinfo",
    ".env": ".env.*",
    "mise.toml": "mise.*.toml",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb",
  },
  // #endregion
  // #region Files
  "files.trimTrailingWhitespace": true,
  "files.autoSave": "afterDelay",
  "files.insertFinalNewline": true,
  "files.associations": {
    ".env*": "dotenv"
  },
  "files.exclude": {
    "**/.git": false,
    "**/.svn": false,
    "**/.hg": false,
    "**/CVS": false,
    "**/.DS_Store": false,
    "**/Thumbs.db": false,
    "**/node_modules": false,
  },
  // #endregion
  // #region JS / TS
  "javascript.preferences.quoteStyle": "single",
  "typescript.preferences.quoteStyle": "single",
  // #endregion
  // #region Code Spell Checker
  "cSpell.userWords": [
    "catppuccin",
    "dotnet",
    "easycoast",
    "fastfetch",
    "fatec",
    "javac",
    "kotlin",
    "lazydocker",
    "lazygit",
    "println",
    "rafascalet",
    "scalet"
  ],
  "cSpell.language": "en, en-US, en-Gb, pt, pt-BR, lorem",
  // #endregion
  // #region Catppuccin
  "catppuccin-icons.specificFolders": true,
  "catppuccin-icons.monochrome": false,
  "catppuccin.accentColor": "lavender",
  "catppuccin.syncWithIconPack": true,
  "catppuccin.customUIColors": {
    "mocha": {
      "statusBar.background": "base",
      "statusBar.noFolderBackground": "base",
      "statusBar.debuggingBackground": "accent",
      "statusBar.foreground": "accent",
      "statusBar.noFolderForeground": "accent",
      "statusBar.debuggingForeground": "base",
      "statusBarItem.remoteBackground": "accent",
      "sideBar.background": "base",
      "sideBar.dropBackground": "base",
      "sideBar.foreground": "accent",
      "sideBarSectionHeader.foreground": "accent",
      "sideBarSectionHeader.background": "base",
      "sideBarTitle.foreground": "accent",
      "titleBar.activeBackground": "base",
      "titleBar.activeForeground": "accent",
      "titleBar.inactiveBackground": "base",
      "titleBar.inactiveForeground": "accent",
      "gitDecoration.addedResourceForeground": "accent",
      "gitDecoration.conflictingResourceForeground": "accent",
      "gitDecoration.deletedResourceForeground": "accent",
      "gitDecoration.ignoredResourceForeground": "accent",
      "gitDecoration.modifiedResourceForeground": "accent",
      "gitDecoration.renamedResourceForeground": "accent",
      "gitDecoration.stageDeletedResourceForeground": "accent",
      "gitDecoration.stageModifiedResourceForeground": "accent",
      "gitDecoration.untrackedResourceForeground": "accent",
      "gitDecoration.submoduleResourceForeground": "accent",
      "panelSectionHeader.foreground": "accent",
      "panelTitle.activeForeground": "accent",
      "panelTitle.inactiveForeground": "accent",
      "panel.border": "base",
      "panelSection.border": "base",
      "terminal.border": "base",
      "terminal.tab.activeBorder": "base",
      "activityBar.activeBackground": "base",
      "activityBar.background": "base",
      "activityBar.foreground": "accent",
      "activityBar.inactiveForeground": "accent",
    },
    "latte": {
      "statusBar.background": "base",
      "statusBar.noFolderBackground": "base",
      "statusBar.debuggingBackground": "accent",
      "statusBar.foreground": "accent",
      "statusBar.noFolderForeground": "accent",
      "statusBar.debuggingForeground": "base",
      "statusBarItem.remoteBackground": "accent",
      "sideBar.background": "base",
      "sideBar.dropBackground": "base",
      "sideBar.foreground": "accent",
      "sideBarSectionHeader.foreground": "accent",
      "sideBarSectionHeader.background": "base",
      "titleBar.activeBackground": "base",
      "titleBar.activeForeground": "accent",
      "titleBar.inactiveBackground": "base",
      "titleBar.inactiveForeground": "accent",
      "gitDecoration.addedResourceForeground": "accent",
      "gitDecoration.conflictingResourceForeground": "accent",
      "gitDecoration.deletedResourceForeground": "accent",
      "gitDecoration.ignoredResourceForeground": "accent",
      "gitDecoration.modifiedResourceForeground": "accent",
      "gitDecoration.renamedResourceForeground": "accent",
      "gitDecoration.stageDeletedResourceForeground": "accent",
      "gitDecoration.stageModifiedResourceForeground": "accent",
      "gitDecoration.untrackedResourceForeground": "accent",
      "gitDecoration.submoduleResourceForeground": "accent",
      "panelSectionHeader.foreground": "accent",
      "panelTitle.activeForeground": "accent",
      "panelTitle.inactiveForeground": "accent",
      "panel.border": "base",
      "panelSection.border": "base",
      "terminal.border": "base",
      "terminal.tab.activeBorder": "base",
      "activityBar.activeBackground": "base",
      "activityBar.background": "base",
      "activityBar.foreground": "accent",
      "activityBar.inactiveForeground": "accent",
    },
  },
  // #endregion
}
